<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
    <p id="notice"><%= notice %></p>

    <h1>Apps</h1>

    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>TeamName</th>
          <th>Square</th>
          <th>Image0</th>
          <th>Image1</th>
          <th>Image2</th>
          <th>Image3</th>
          <th>About</th>
          <th>Feature</th>
          <th>Count</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @apps.each do |app| %>
          <tr>
            <td><%= app.name %></td>
            <td><%= app.team_name %></td>
            <td><%= image_tag app.square %></td>
            <td><%= image_tag app.image0 %></td>
            <td><%= image_tag app.image1 %></td>
            <td><%= image_tag app.image2 %></td>
            <td><%= image_tag app.image3 %></td>
            <td><%= app.about %></td>
            <td><%= app.feature %></td>
            <td><%= app.count %></td>
            <td><%= link_to 'Show', app_path(uid: app.uid) %></td>
            <td><%= link_to 'Edit', edit_app_path(uid: app.uid) %></td>
            <td><%= link_to 'Destroy', app, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New App', new_app_path %>
    </div>
  </div>
</div>